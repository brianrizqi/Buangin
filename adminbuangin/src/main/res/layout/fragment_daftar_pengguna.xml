<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/daftar_pengguna_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Pengguna"
                android:textColor="@color/warnaPutih"
                android:textSize="24sp" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <Spinner
        android:id="@+id/spin_jenis_pengguna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/daftar_pengguna_appbar"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp">

    </Spinner>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@id/spin_jenis_pengguna"
        android:layout_marginTop="8dp"
        android:id="@+id/pengguna_frameLayout"
        android:layout_height="match_parent">

    </FrameLayout>

